<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jorgeluis.smsmassivemx.AboutActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_s3"
            android:id="@+id/imageView3" />

        <TextView
            android:text="@string/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_about_tittle"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="center" />

        <TextView
            android:text="@string/company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_about_desc"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textColor="#666"
            android:textSize="14sp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="Web:"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/label_web"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="viewEnd"
                    android:paddingRight="3dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:text="@string/company_website"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:id="@+id/txt_company_web"
                    android:textSize="16sp"
                    android:paddingLeft="3dp"
                    />
            </TableRow>
            <!--TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="Email:"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/label_email"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="viewEnd"
                    android:paddingRight="3dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:text="@string/company_email"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:id="@+id/txt_company_email"
                    android:textSize="16sp"
                    android:paddingLeft="3dp"
                    />
            </TableRow>-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:text="TelÃ©fono:"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/label_phone"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="viewEnd"
                    android:paddingRight="3dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:text="@string/company_phone"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:id="@+id/txt_company_phone"
                    android:textSize="16sp"
                    android:paddingLeft="3dp"
                    />
            </TableRow>
        </TableLayout>

        <TextView
            android:text="@string/colaboration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:id="@+id/txt_colaboration"
            android:textColor="#666"
            android:textSize="14sp"
            />
    </LinearLayout>
</ScrollView>
